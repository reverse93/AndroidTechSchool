<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#BF8A5C"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Gdansk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gdansk_color"
        android:gravity="center"
        android:text="@string/Gdansk"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Gdynia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:backgroundTint="@color/gdansk_color"
        android:text="@string/Gdynia"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Sopot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/Sopot"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_cities"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>